@model IEnumerable<DriverDriverWeb.Models.CourseModel>

@{
    ViewBag.Title = "MyTracker";
}

<h2>My Tracker</h2>

<button id="btnSubmit">Click</button>

<div class="tabs">
    <div class="tab-nav-wrapper">
        <ul>
            <li class="active"><a href="#tab1">18 Holes</a></li>
            <li><a href="#tab2">9 Holes</a></li>
        </ul>
    </div>
    <div class="tab-content-wrapper">
        <div id="tab1" class="tab-content" style="display:none;">
            <p>
                <label>Create Entry for 18 Holes: </label>
                <a href="~/Home/CreateCourseEntry" class="btn btn-success btn-sm">Create Entry</a>
            </p>
            <table name="fullTable" class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TimeSpent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BallsLost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Score)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseName, "Course Name")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location, "Location")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price, "Price")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeSpent, "Time Spent")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BallsLost, "Balls Lost")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Score, "Score")
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div id="tab2" class="tab-content" style="display:none;">
            <p>
                <label>Create Entry for 9 Holes: </label>
                <a href="~/Home/CreateCourseEntry" class="btn btn-success btn-sm">Create Entry</a>
            </p>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {

            /*var myBtn = document.getElementById('btnSubmit');
            myBtn.addEventListener('click', function(e) {
                e.preventDefault();
                alert('Hello');
            });*/

            $('#btnSubmit').click(function (event) {
                alert("Hello");
            });
        });

        $(document).ready(function () {
            $(".tab-nav-wrapper li.active").click();
            $($(".tab-nav-wrapper li.active a").attr("href")).show();

            $(".tab-nav-wrapper li").click(function (e) {
                e.preventDefault();
                e.stopPropagation();

                $(".tab-nav-wrapper li").removeClass("active");
                $(this).addClass("active");

                var target = $(this).find("a").attr("href");
                $(".tab-content-wrapper").find(".tab-content").hide();
                $(".tab-content-wrapper").find(target).show();
            })
        });
    });
</script>

<style>
    .tabs {
        height: 1475px;
        width: 100%;
        text-align: left;
    }

    .tab-nav-wrapper {
        width: 100%;
        overflow-x: auto;
        position: relative !important;
        z-index: 999 !important;
        top: 3px;
    }

    .tabs ul {
        display: block;
        /*width: max-content;*/
        overflow-y: hidden;
        margin: 0px;
        padding-inline-start: 5px;
    }

        .tabs ul li {
            display: inline-block;
            border: 1px solid grey;
            border-bottom: 1px solid black;
            background-color: white;
        }

            .tabs ul li.active {
                border: 1px solid black;
                border-bottom: 3px solid white;
            }

            .tabs ul li a {
                text-decoration: none;
                color: black;
                padding: 10px;
                line-height: 25px;
                position: relative;
                font-weight: bold;
            }

    .tab-content-wrapper {
        position: relative !important;
        z-index: 1 !important;
        border: 1px solid black;
        padding: 20px;
        min-height: 40px;
    }
</style>